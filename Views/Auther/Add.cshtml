@model BookStore.Models.Domain.Auther
@{
}

<div class="container pt-5">
	<div class="row">
		<div class="col-md-6">
			<h2>Add Author</h2>
			<form asp-action="Add" method="post">
				<div class="form-group">
					<label asp-for="AutherName">Ather Name *</label>
					<input type="text" class="form-control" asp-for="AutherName" />
					<span asp-validation-for="AutherName" class="text-danger"></span>
				</div>
				@if(TempData["msg"]!=null)
				{
					<div class="form-group">
						@TempData["msg"]
					</div>
				}
				<div class="form-group pt-2">
					<button type="submit" class="btn btn-dark">Save</button>
					<a href="/Auther/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>List</a>
				</div>
			</form>
		</div>
	</div>
</div>



